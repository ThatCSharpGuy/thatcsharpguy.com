{% extends 'base' %}

{% block content %}
<div class="articles">
    <div class="pagination">

        <ul class="post-list">
    {% for post in paginator %}
<li>
      <h2 class="post-title">
<a class="post-link" href="{{ post.canonical_url }}">
          {{ post.title }}
        </a>
      </h2>
      <div class="post-meta">
        <span class="post-date"><i class="fa fa-calendar"></i> {{ post.date_time | date:"MMMM dd, yyyy" }}</span>
        <span class="post-reading-time left-vsplit"><i class="fa fa-clock-o"></i> {{ post.author  }}</span>
      </div>
      <p class="post-excerpt">{{ post.summary }}</p>


      <div class="post-tags">

      {% for tag in post.tags %}
      <a class="post-tag"  href="{{ tag.url }}">#{{ tag.text }}</a>
 {% endfor %}
</div>
    </li>

    {% endfor %}
        </ul>

    </div>
</div>

<div class="pure-g">
    <div class="listed-post pure-u-1">
        <div class="pure-g paginator-footer">
            <div class="pure-u-1-3">
                {% if paginator.has_previous_page %}
                <a href="{{ paginator.previous_page_url }}">&#8592; Página {{ paginator.previous_page }}</a>
                {% endif %}
            </div>
            <div class="pure-u-1-3"></div>
            <div class="pure-u-1-3 align-right">
                {% if paginator.has_next_page %}
                <a href="{{ paginator.next_page_url }}">Página {{ paginator.next_page }} &#8594;</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
